<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="pw.janyo.janyoshare">

	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

	<application
		android:name=".config.APP"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/AppTheme.NoActionBar">
		<activity
			android:name="pw.janyo.janyoshare.ui.activity.SplashActivity"
			android:screenOrientation="portrait"
			android:theme="@style/AppTheme.NoActionBar.FullScreen.Splash">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name="pw.janyo.janyoshare.ui.activity.MainActivity"
			android:label="@string/app_name"
			android:screenOrientation="portrait"
			android:theme="@style/AppTheme.NoActionBar">
			<meta-data
				android:name="android.app.searchable"
				android:resource="@xml/searchable" />
			<intent-filter>
				<action android:name="android.intent.action.SEARCH" />
			</intent-filter>
		</activity>
		<activity
			android:name="pw.janyo.janyoshare.ui.activity.SettingsActivity"
			android:label="@string/title_activity_settings"
			android:screenOrientation="portrait"
			android:theme="@style/AppTheme.Preference" />

		<provider
			android:name="androidx.core.content.FileProvider"
			android:authorities="@string/authorities"
			android:exported="false"
			android:grantUriPermissions="true">
			<meta-data
				android:name="android.support.FILE_PROVIDER_PATHS"
				android:resource="@xml/provider_paths" />
		</provider>

		<activity
			android:name="pw.janyo.janyoshare.ui.activity.DirManagerActivity"
			android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />
	</application>

</manifest>